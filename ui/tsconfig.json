{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es3",
    "jsx": "react",
    "allowJs": true,
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015", "dom"],
    "baseUrl": "./src",
  },
  "exclude": ["node_modules", "**/*.js", "**/*.scss"]
}